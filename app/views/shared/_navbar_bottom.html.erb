<div class="fixed bottom-0 w-full">
    <input type="checkbox" name="" id="nav_switch">
    <header class=" main-header">
        <%= link_to root_path do %>
            <i class="fa-solid fa-house-chimney fa-xl" style="color: #d14d72;"></i>
        <% end %>
        <% if current_user.blank? %>
            <%= link_to new_user_session_path do %>
                <i class="fa-solid fa-user fa-xl" style="color: #d14d72;"></i>
            <% end  %>
        <% else %>
            <%= button_to destroy_user_session_path, method: "delete", class: "btn-round btn-sm btn-gray" do %>
                <i class="fa-solid fa-right-from-bracket fa-xl" style="color: #d14d72;"></i>
            <% end %>
        <% end %>
        <%= link_to '#' do %>
            <i class="fa-solid fa-cart-shopping fa-xl" style="color: #d14d72;"></i>
        <% end %>
        <label for="nav_switch" class="cursor-pointer hb">
            <span></span>
            <span></span>
            <span></span>
        </label>
        <nav class="main-nav">
            <ul>
                <li><%= link_to '關於我們' %></li>
                <li><%= link_to '線上購物' %></li>
                <li><%= link_to '訂購須知' %></li>
                <li><%= link_to '查詢訂單' %></li>
                <li>
                    <div class="flex justify-center gap-3">
                        <div><i class="cursor-pointer fa-brands fa-facebook fa-xl" style="color: #d14d72;"></i></div>
                        <div><i class="cursor-pointer fa-brands fa-square-instagram fa-xl" style="color: #d14d72;"></i></div>
                    </div>
                </li>
            </ul>
        </nav>
    </header>
</div>