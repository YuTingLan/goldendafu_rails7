<div class="flex justify-end">
  <div class="inline-block m-4 solid_btn">
    <i class="fa-solid fa-plus" style="color: #fff"></i>
    <%= link_to '新增商品', new_product_path %>
  </div>
</div>

<% @products.each do |product| %>
    <section class="grid grid-cols-1 p-2 m-4 ">
        <div class="flex flex-wrap gap-4 p-6 rounded-lg shadow-[0_10px_35px_rgba(0,0,0,0.25)]">
            <div class="flex justify-between w-full gap-2">
                <div class="text-2xl font-bold border-b-8 border-yellow-200 ">
                    <%= product.title %>
                </div>
                <div>
                    <%= link_to edit_product_path(product.id) do %>
                        <i class="fa-regular fa-pen-to-square fa-xl" style="color: #d14d72;"></i>
                    <% end %>
                    <%= link_to product_path(product.id),
                                                        class: "icon icon-danger", 
                                                        method: "delete", 
                                                        data: {confirm: "確認刪除?"} do %>
                        <i class="fa-regular fa-trash-can fa-xl" style="color: #d14d72;"></i>
                    <% end %>
                    <%= link_to '#' do %>
                        <i class="fa-solid fa-cart-plus fa-xl" style="color: #d14d72;"></i>
                    <% end %>
                </div>
            </div>
            <div><img src="https://fakeimg.pl/350x200/ff0000,128/000,255"></div>
            <div>成分：<%= product.description %></div>
            <div class="drop">
                <div class="dropOption">
                <span>請選擇內餡</span>
                </div>
                <ul class="dropdown">
                    <li>紅豆</li>
                    <li>芋頭</li>
                </ul>
            </div>
            <div class="grid w-full grid-cols-3 gap-4">
                <span class="p-2 text-center text-[#d14d72] hollow_btn hover:solid_btn">單顆</span>
                <span class="p-2 text-center text-[#d14d72] hollow_btn hover:solid_btn">6入/盒</span>
                <span class="p-2 text-center text-[#d14d72] hollow_btn hover:solid_btn">9入/盒</span>
            </div>
        </div>
    </section>
<% end %>